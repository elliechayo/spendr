<section class="section add-expense-section">
    <h2>Edit Profile</h2>
    <form action="/profile/{{user.id}}" method="POST">
        <p class="message">
            {{#if message}}
            {{message}}
            {{/if}}
        </p>
        <div class="input-group">
            <input type="text" name="firstName" placeholder="First Name" required value="{{user.firstName}}" />
        </div>
        <div class="input-group">
            <input type="text" name="lastName" placeholder="Last Name" required value="{{user.lastName}}" />
        </div>
        <div class="input-group">
            <input type="email" name="email" placeholder="Email" required value="{{user.email}}" />
        </div>
        <div class="input-group">
            <input type="text" name="phone" placeholder="Phone" required value="{{user.phone}}" />
        </div>
        <div class="input-group">
            <input type="password" name="password" placeholder="Password" required value="" />
        </div>
        <button type="submit" class="btn submit-btn btn-filled">Edit</button>
        <a href="/" class="btn mt-sm">Cancel</a>
    </form>
</section>